<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_1"
    android:orientation="vertical"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:onClick="back"
            android:scaleType="fitCenter"
            android:src="@drawable/white_back" />

    </LinearLayout>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/login_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/transparent_frame"
        android:fontFamily="serif"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="Creating New Account"
        android:textColor="#fff"
        android:textSize="28sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#4AFFFFFF"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/main_bg_1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@color/yellow_custom"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="165.5dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2.5dp"
                    android:background="@drawable/edtx_white_bg_2"
                    android:gravity="center"
                    android:hint="- First Name -"
                    android:inputType="text"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="165.5dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="2.5dp"
                    android:background="@drawable/edtx_white_bg_2"
                    android:gravity="center"
                    android:hint="- Last Name -"
                    android:inputType="text"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/yellow_custom"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="Date of Birth"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="108.3dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edtx_white_bg_2"
                    android:gravity="center"
                    android:hint="- Day -"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="108.3dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edtx_white_bg_2"
                    android:gravity="center"
                    android:hint="- Monthe -"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="108.3dp"
                    android:layout_height="35dp"
                    android:background="@drawable/edtx_white_bg_2"
                    android:gravity="center"
                    android:hint="- Year -"
                    android:inputType="date"
                    android:maxLength="4"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textSize="18sp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/yellow_custom"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="E-Mail"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="336dp"
                    android:layout_height="35dp"
                    android:background="@drawable/edtx_white_bg_2"
                    android:gravity="center"
                    android:hint="- Enter Email Adress -"
                    android:inputType="textEmailAddress"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="336dp"
                    android:layout_height="35dp"
                    android:background="@drawable/edtx_white_bg_2"
                    android:gravity="center"
                    android:hint="- Confirm Email -"
                    android:inputType="textEmailAddress"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/yellow_custom"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingBottom="2dp"
                android:text="Password"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="165.5dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2.5dp"
                    android:background="@drawable/edtx_white_bg_2"
                    android:gravity="center"
                    android:hint="- Password -"
                    android:inputType="textPassword"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="165.5dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="2.5dp"
                    android:background="@drawable/edtx_white_bg_2"
                    android:gravity="center"
                    android:hint="- Password -"
                    android:inputType="textPassword"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agree to the purchase policy and rules"
            android:textColor="@color/orange_custom"
            android:textSize="18sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_yelow_bg"
        android:fontFamily="sans-serif-light"
        android:onClick="back"
        android:paddingLeft="28dp"
        android:paddingTop="10dp"
        android:paddingRight="28dp"
        android:paddingBottom="10dp"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

</LinearLayout>